@model IEnumerable<CinarKafe.Models.Siperisler>
@{
    ViewBag.Title = "Siperişlerim";
}
    <section class="p-2">
        <h3>Siperişlerim</h3>
        <hr />
        @if (Model.Count() == 0)
        {
            <h4 class="text-center text-success">Hiçbir siperiş bulunmadı</h4>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Adet</th>
                        <th>Toplam Fiyat</th>
                        <th>Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var siperis in Model)
                    {
                        <tr>
                            <td>@siperis.Siperis.Urun.UrunAdi</td>
                            <td>@siperis.Siperis.Urun.UrunKategorisi.KategoriAdi</td>
                            <td>@siperis.Siperis.Adet</td>
                            <td>@siperis.Siperis.ToplamFiyat</td>
                            <td>@siperis.Siperis.Tarihi</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>