@using Microsoft.AspNet.Identity
@model IEnumerable<CinarKafe.Models.ViewModels.SiperisViewModel>
@{
    ViewBag.Title = "Sepetim";
}
    <section class="p-2">

        <input type="hidden" value="@User.Identity.GetUserId()" id="CurrentUserId" />

        <h4 class="mt-2 mb-2">Sepetim</h4>
        <hr />
        <input id="currentUserId" type="hidden" value="@User.Identity.GetUserId()" />

        <div class="form-group">
            <table class="table table-bordered table-hover" id="orderListTable">
                <thead>
                    <tr>
                        <th hidden></th>
                        <th hidden></th>
                        <th>Ürün Adi</th>
                        <th>Kategori</th>
                        <th hidden></th>
                        <th hidden></th>
                        <th>Adet</th>
                        <th>Toplam Fiyat</th>
                        <th>Tarih</th>
                        <th hidden></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 0;
                    }

                    @foreach (var item in Model)
                    {

                        if(counter != 0)
                        {
                            <tr>
                                <td hidden>@item.UrunId</td>
                                <td hidden>@item.UrunKategorisiId</td>
                                <td>@item.UrunAdi</td>
                                <td>@item.KategoriAdi</td>
                                <td hidden>@item.Fiyat</td>
                                <td hidden>@item.StokMiktari</td>
                                <td>@item.Adet</td>
                                <td>@item.ToplamFiyat</td>
                                <td>@item.Tarihi</td>
                                <td hidden>@item.MasaId</td>
                            </tr>
                        }
                        counter++;
                    }
                </tbody>
            </table>
        </div>

        @foreach (var item in Model)
        {
            <div class="form-group">
                @Html.DropDownListFor(m => item.MasaId, new SelectList(item.Masalar, "Id", "MasaNumarasi"), "masa seçin", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => item.MasaId)
            </div>
        }

        <div class="form-group">
            <h3 class="text-danger" id="toplamFiyat"></h3>
        </div>

        <div class="form-group d-flex flex-row">
            <input type="button" class="btn btn-primary" id="siperisOnaylaButton" value="Siperiş onayla" />
            <div class="spinner-border ml-2 mt-1 text-primary" role="status">
                <span class="sr-only"></span>
            </div>
        </div>
        <h4 class="text-success text-center" id="order-info">Sepetiniz boş</h4>
    </section>