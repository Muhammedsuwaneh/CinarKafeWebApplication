@model IEnumerable<CinarKafe.Models.Siperisler>
@{
    ViewBag.Title = "Detail";
}

    <section class="p-2">
        <h3>Masa</h3>
        <hr />
        @if (Model.Count() == 0)
        {
            <h3 class="text-success text-center mt-1 mb-2">Masa Boş</h3>
            <h4 class="text-primary text-center">Ödenmemiş bir siperiş bulunamadı</h4>
        }
        else
        {
            <table id="masaBilgileri" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Müşteri</th>
                        <th>Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Adet</th>
                        <th>Toplam Fiyat</th>
                        <th>Masa #</th>
                        <th>Tarihi</th>
                        <th>Ödeme</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="siperisItemDetail-@item.Id">
                            <td>@item.ApplicationUser.UserName</td>
                            <td id="urunAdi">@item.Siperis.Urun.UrunAdi</td>
                            <td>@item.Siperis.Urun.UrunKategorisi.KategoriAdi</td>
                            <td id="adet">@item.Siperis.Adet</td>
                            <td id="toplamfiyat">@item.Siperis.ToplamFiyat</td>
                            <td>@item.Masa.MasaNumarasi</td>
                            <td id="tarihi">@item.Siperis.Tarihi</td>
                            <td class="d-flex flex-row">
                                <button class="btn btn-success js-odeme" data-toggle="modal" data-target="#siperisModal" data-siperisItem-id=@item.Id>Ödeme Yap</button>
                                <div class="spinner-border ml-2 mt-1 text-primary" role="status">
                                    <span class="sr-only"></span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>