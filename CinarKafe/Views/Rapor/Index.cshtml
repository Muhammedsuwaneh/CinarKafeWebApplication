@model IEnumerable<CinarKafe.Models.ViewModels.RaporViewModel>
@{
    ViewBag.Title = "Rapor";
}

<section class="p-2">
    <h3>Rapor</h3>
    <hr />
    @if(Model.Count() == 0)
    {
        <h3 class="text-success">Şuan hiçbir rapor oluşturulmadı</h3>
    }
    else
    {
          <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Kategori</th>
                    <th>Kaç tane satıldı</th>
                    <th>Tarihi</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var urun in Model) {
                <tr>
                    <td>@urun.Siperis.Urun.UrunAdi</td>
                    <td>@urun.Siperis.Urun.UrunKategorisi.KategoriAdi</td>
                    <td>@urun.KacTaneSatildi</td>
                    <td>@urun.Siperis.Tarihi</td>
                </tr>          
                }
            </tbody>
        </table>
    }
</section>

