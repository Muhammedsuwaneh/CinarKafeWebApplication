@using Microsoft.AspNet.Identity

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
    <div class="navbar-brand sidebar-logo">
        <a class="text-white text-decoration-none" href="@Url.Action("Index", "Home")">
            <i class="fa fa-mug-hot"></i> <span class="sidebar__logo">Çınar Kafe</span>
        </a>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
            @if (Request.IsAuthenticated)
            {
                if(!User.IsInRole("CanManageApplication"))
                {
                    <li>
                        <a href="@Url.Action("Sepetim", "Home")">
                            <span class="siperisCount font-weight-bold">0</span> Sepetim
                        </a>
                    </li>
                }
                <li>
                    @Html.ActionLink("Hoş Geldin " + User.Identity.GetUserName() + "!", "Index", "Profil", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
                </li>
            }
            @Html.Partial("_LoginPartial")
        </ul>
    </div>
</nav>